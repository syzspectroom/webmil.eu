.work-background
	.container
		.work
			%h2
				=@work.name
				= link_to '‚Üê back', works_path, class: 'link'
			= link_to @work.url, @work.full_url
			-unless @work.tag.empty?
				%p=@work.tag
			.description
				%p
					=@work.description
			.screenshots
				- @work.pictures.each do |picture|
					%img{src: picture.image.url, alt: picture.title}
