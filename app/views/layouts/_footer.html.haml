%footer
  .footer-container
    .sitemap
      %h4 Sitemap
      %ul
        %li
          = link_to 'home', root_path
          %p shortly about us
        %li
          = link_to 'works', works_path
          %p see what we do
        %li
          = link_to 'team', studio_path
          %p who’s there
        %li
          = link_to 'contacts', contacts_path
          %p where we are
      .copyright
        %p © 2009-2012 Webmil lab. All rights reserved.

    .resources
      %h4 Resources
      %ul
        %li
          %a{:href => "#"} facebook
        %li
          %a{:href => "http://twitter.com/webmil"} twitter
    .address{itemscope: true,  itemtype: "http://schema.org/Organization"}
      %h4 Get in touch with us
      %meta{itemprop: "name", content: "Webmil"}
      %address{itemscope: true, itemprop: "address" ,itemtype: "http://schema.org/PostalAddress"}
        .tel{itemprop: "telephone"} +380 342 735 448
        .mail{itemprop: "email"} info@webmil.com.ua
      %p
        = link_to 'Map & directions', contacts_path
%script{'type'=> 'text/javascript'}
  :plain
    $(window).load(function(){
        $('.bw').BlackAndWhite({
            hoverEffect : true,
            // set the path to BnWWorker.js for a superfast implementation
            webworkerPath : false,
            // for the images with a fluid width and height
            responsive:true
        });
    });